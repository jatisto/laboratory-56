@model IEnumerable<Laboratory56.Models.Comment>
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Index";
}
<h4>
    @Localizer["Комментарии"]
</h4>

<a asp-area="" asp-controller="Comments" asp-action="Create"><h4>@Localizer["Create"]</h4></a>

<form asp-action="Index" method="post" enctype="multipart/form-data">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Localizer["Изображение"]
                </th>
                <th>
                    @Localizer["Имя"]
                </th>
                <th>
                    @Localizer["Описание"]
                </th>
                <th>
                    @Localizer["Like"]
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PostId)
                        @* <img src="~/@item.ImageUrl" width="250" height="150" /> *@
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Content)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CommentDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.Name)
                    </td>
                    <td>
                    <a asp-action="Edit" asp-route-id="@item.CommentId">@Localizer["Edit"]</a> <br />
                    <a asp-action="Details" asp-route-id="@item.CommentId">
                        @Localizer["Details"]
                    </a>  <br />
                    <a asp-action="Delete" asp-route-id="@item.CommentId">@Localizer["Delete"]</a>
                </td>
                </tr>
            }
        </tbody>
    </table>


    <div>
        <a asp-action="Index" asp-controller="Home">@Localizer["Back_to_List"]</a>
    </div>
</form>

