@model Laboratory56.Models.Publication


<table class="table">
    <thead>
    <tr>
        <th>
            Изображение
        </th>
        <th>
            Имя
        </th>
        <th>
            Описание
        </th>
        <th>
            Нравиться
        </th>
        <th>
            Кол. Коментарии
        </th>
        <th></th>
    </tr>
    </thead>

    <tbody>
    <tr>
        <td>
            <img src="~/@Model.ImageUrl" width="700" height="450"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => Model.User.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => Model.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => Model.Like)
        </td>
        <td>
            @Html.DisplayFor(modelItem => Model.ComentCount)
        </td>
    </tr>

    </tbody>

</table>

<table >
    <tbody >
    <div class="row">
        <div class="col-lg-12">
            @* Комментарии (@Model.ComentCount) *@
            @* <br/> *@
            <a onclick="openCommentForm(@Model.Id)" style="cursor: pointer">Оставить комментарий</a>
        </div>
        <div class="col-md-12" id="postdiv-@Model.Id" style="display: none">
            <textarea id="posttext-@Model.Id"></textarea> <br/>
            <input type="button" id="postComment" onclick="sendComment('@Model.Id', '@Model.UserId')" value="Отправить"/>
        </div>
    </div>
    </tbody>
</table>

<br/>
<form asp-controller="Publications" asp-action="LikeMethod" asp-route-postId="@Model.Id" asp-route-userId="@Model.UserId">
    <input id="LikeId" type="submit" value="Like" class="btn btn-default"/>
</form>

<hr/>

<script>
    function openCommentForm(postId) {
        $('#postdiv-' + postId).show();
    }

    function sendComment(postId, userId) {
        $.ajax({
            url: '@Url.Action("Comment", "Comments")',
            type: 'POST',
            data: { 'postId': postId, 'userId': userId, 'content': $('#posttext-' + postId).val() },
            success: function(data) {
                setTimeout(function() {
                        alert('Ваш комментарий ' + '(' + $('#posttext-' + postId).val() + ')' + ' добавлен!!!', data)
                    },
                    500);
            },
            error: function() {
                console.log('Ошибка во время отправки комментария', this);
            }
        });
    }
</script>